/* pages/gamepage/gamepage.wxss */

.game_bg {
  width: 100%;
  min-height: 100vh;
  background: #F8D927;
}

.waiting_peer {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.notice-warn {
  background: rgba(0, 222, 16, 0.9);
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}

.game-main-scene {
  padding: 80rpx 20rpx;
}

.video-area {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.profile_info {
  display: flex;
  justify-content: baseline;
  align-items: flex-end;
  height: 60rpx;
  line-height: 60rpx;
}

.avatar-image {
  display: block;
  width: 100%;
  height: 100%;
}

.avatar {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.avatar-wrap {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  overflow: hidden;
}

.nickname {
  margin-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}

.exam-no {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.question-content {
  font-size: 40rpx;
  line-height: 48rpx;
  margin-bottom: 20rpx;  
}

.question-option {
  font-size: 32rpx;
  line-height: 70rpx;
  margin: 10rpx 10rpx;
  border: 1px dashed #aaa;
  border-radius: 6rpx;
  padding: 10rpx;
}